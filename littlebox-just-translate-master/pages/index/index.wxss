.just-translate-header-icon {
  width: 18px;
  height: 18px;
  font-size: 18px;
  line-height: 18px;
  color: black;
}
.just-translate-header-icons-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.just-translate-header-icon-blinker {
  width: 18px;
  height: 18px;
  font-size: 18px;
  line-height: 18px;
  color: black;
  -webkit-animation-name: blinker;
  -webkit-animation-duration: 1s;
  -webkit-animation-timing-function: linear;
  -webkit-animation-iteration-count: infinite;
  animation-name: blinker;
  animation-duration: 1s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
}
.just-translate-header-lefttime-text {
  width: 18px;
  height: 18px;
  font-size: 18px;
  line-height: 18px;
  color: green;
  text-align: center;
}
.just-translate-header-icon-text {
  font-size: 12px;
  line-height: 12px;
  margin-top: 2px;
  font-weight: bold;
}
.just-translate-header-icon-progress {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}
.just-translate-header-icon-container {
  border-style: solid;
  border-width: 3px;
  border-radius: 50%;
  width: 46px;
  height: 46px;
  min-height: 46px;
  min-width: 46px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.just-translate-header-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.just-translate-footer-copyright {
  font-size: 12px;
  text-align: center;
  line-height: 14px;
  color: #666666;
}
.just-translate-footer-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 15px;
  width: 100%;
  min-height: 14px;
}
.just-translate-body-container {
  height: calc(100% - 170px);
  padding: 15px;
}
.just-translate-body-real-container {
  height: 100%;
  border-style: solid;
  border-color: #999999;
  border-width: 1px;
  border-radius: 5px;
  position: relative;
  padding: 10px;
  width: calc(100% - 25px);
}
.just-translate-body-content {
  font-size: 12px;
  text-align: left;
  line-height: 14px;
  color: #666666;
  word-break: break-all;
  word-wrap: break-word;
  max-height: 100%;
  position: relative;
  width: 100%;
}
.just-translate-container {
  width: 100vw;
  height: 100vh;
  position: fixed;
}
.just-translate-header-lang-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 250px;
  margin-bottom: 15px;
}
.just-translate-header-lang-single-container {
  border-style: solid;
  border-color: #999999;
  border-width: 1px;
  border-radius: 5px;
  padding: 3px;
  width: 80px;
  font-size: 12px;
  text-align: center;
  line-height: 14px;
  color: #666666;
}
.just-translate-header-lang-single-icon {
  width: 16px;
  height: 16px;
}
.just-translate-body-pending {
    -webkit-animation-name: blinker;
    -webkit-animation-duration: 1s;
    -webkit-animation-timing-function: linear;
    -webkit-animation-iteration-count: infinite;
    width: 100%;
    font-size: 12px;
    line-height: 14px;
    color: #666666;
    text-align: center;
    margin-top: 10px;
    animation-name: blinker;
    animation-duration: 1s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
}

@-webkit-keyframes blinker {  
    0% { opacity: 1.0; }
    50% { opacity: 0.0; }
    100% { opacity: 1.0; }
}

@keyframes blinker {  
    0% { opacity: 1.0; }
    50% { opacity: 0.0; }
    100% { opacity: 1.0; }
}